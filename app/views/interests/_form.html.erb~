<%= form_for(@interest) do |f| %>
  <% if @interest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@interest.errors.count, "error") %> prohibited this interest from being saved:</h2>

      <ul>
      <% @interest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :owing %><br>
    <%= f.text_field :owing, :precision => 16, :scale => 2 %>
  </div>
  <div class="field">
    <%= f.label :paying %><br>
    <%= f.text_field :paying, :precision => 16, :scale => 2 %>
  </div>
  <div class="field">
    <%= f.label :outstanding %><br>
    <%= f.text_field :outstanding, :precision => 16, :scale => 2 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
